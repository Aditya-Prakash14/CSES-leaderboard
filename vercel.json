{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        },
        {
            "src": "fecher.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/public/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/fetch",
            "dest": "fecher.py"
        },
        {
            "src": "/.*",
            "dest": "index.js"
        }
    ],
    "crons": [
        {
            "path": "/fetch",
            "schedule": "0 */3 * * *"
        }
    ]
}
